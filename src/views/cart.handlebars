<div>
  <h2>Your Cart ID : # <span id="cartId">{{cart._id}}</span></h2>
  <ul class="my-4 py-4">
    {{#each cart.products}}
      <li
        class="border-2 my-3 rounded-3xl bg-violet-500 border-pink-400 min-w-full flex flex-col items-center"
      >
        <h3>{{product.title}}</h3>
        <p>{{product.price}}</p>
        <p>{{quantity}}</p>
      </li>
    {{/each}}
  </ul>
  <div
    class="bg-indigo-800 border-2 border-white rounded-full flex flex-row justify-between items-center px-4 py-2 my-2"
  >
    <button class="bg-black rounded-full px-3 py-1">Comprar</button>
    <button
      id="btnLimpiar"
      class="bg-black rounded-full px-3 py-1"
    >Limpiar</button>
    <button id="btnSalir" class="bg-black rounded-full px-3 py-1">Salir</button>
  </div>
</div>
<script src="/js/cart.js"></script>